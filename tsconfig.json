{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2020",
    "declaration": true,
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": [
      "es2019.array", "es6", "dom"
    ]
  },
  "include": ["./src/**/*"]
}
